kind: KubeletConfiguration
apiVersion: kubelet.config.k8s.io/v1beta1
authentication:
  anonymous:
    enabled: false
  webhook:
    enabled: true
  x509:
    clientCAFile: "{{ kube_ssl_base_path }}/ca.crt"
authorization:
  mode: Webhook
clusterDomain: "{{ kube_cluster_domain }}"
clusterDNS:
  - "{{ kube_cluster_domain }}"
podCIDR: "{{ kube_pod_network_cidr }}"
resolvConf: "/run/systemd/resolve/resolv.conf"
runtimeRequestTimeout: "15m"
tlsCertFile: "/var/lib/kubelet/pki/node-{{ inventory_hostname }}.crt"
tlsPrivateKeyFile: "/var/lib/kubelet/pki/node-{{ inventory_hostname }}.key"